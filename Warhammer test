import random

# ---------------------------
# Diccionario de Primarcas
# ---------------------------
primarcas = {
    "Lion El'Jonson": 0, "Fulgrim": 0, "Perturabo": 0, "Jaghatai Khan": 0,
    "Leman Russ": 0, "Rogal Dorn": 0, "Konrad Curze": 0, "Sanguinius": 0,
    "Ferrus Manus": 0, "Angron": 0, "Roboute Guilliman": 0, "Mortarion": 0,
    "Magnus the Red": 0, "Horus Lupercal": 0, "Lorgar Aurelian": 0,
    "Vulkan": 0, "Corvus Corax": 0, "Alpharius Omegon": 0
}

# ---------------------------
# Banco de 150 preguntas
# ---------------------------
preguntas = [
    ("¿Prefieres liderar desde el frente?", {"Leman Russ": 3, "Angron": 2}),
    ("¿Te consideras un estratega natural?", {"Guilliman": 3, "Dorn": 2}),
    ("¿Valoras la perfección estética?", {"Fulgrim": 3}),
    ("¿Te sientes atraído por el conocimiento prohibido?", {"Magnus the Red": 3}),
    ("¿Crees en el poder de la fe?", {"Lorgar Aurelian": 3}),
    ("¿Prefieres la acción a la reflexión?", {"Russ": 3, "Angron": 2}),
    ("¿Eres una persona introspectiva?", {"Corvus Corax": 3, "Mortarion": 2}),
    ("¿Defiendes la idea del sacrificio por el deber?", {"Dorn": 3, "Sanguinius": 2}),
    ("¿Te atrae el caos o lo desconocido?", {"Horus Lupercal": 3, "Alpharius Omegon": 2}),
    ("¿Te consideras un artesano o creador?", {"Ferrus Manus": 3, "Vulkan": 2}),
    ("¿Eres protector con los demás?", {"Vulkan": 3, "Sanguinius": 2}),
    ("¿Te molesta seguir órdenes sin entender el porqué?", {"Khan": 3, "Corax": 2}),
    ("¿Te consideras carismático?", {"Sanguinius": 3, "Horus Lupercal": 2}),
    ("¿Piensas que el fin justifica los medios?", {"Curze": 3, "Alpharius": 2}),
    ("¿Valoras la belleza física o artística?", {"Fulgrim": 3}),
    ("¿Buscas justicia incluso si requiere violencia?", {"Konrad Curze": 3}),
    ("¿Crees que el intelecto es superior a la fuerza?", {"Magnus the Red": 3, "Guilliman": 2}),
    ("¿Sueles trabajar mejor en solitario?", {"Corax": 3, "Lion El'Jonson": 2}),
    ("¿Eres metódico y detallista?", {"Perturabo": 3, "Guilliman": 2}),
    ("¿Encuentras motivación en la adversidad?", {"Mortarion": 3, "Russ": 2}),
    ("¿Tiendes a ser reservado y misterioso?", {"Lion El'Jonson": 3, "Alpharius": 2}),
    ("¿Buscas la redención en lo que haces?", {"Curze": 2, "Sanguinius": 3}),
    ("¿Te consideras impaciente o impulsivo?", {"Angron": 3, "Khan": 2}),
    ("¿Te importa más la unidad que la gloria personal?", {"Guilliman": 3}),
    ("¿Admiras el simbolismo y los rituales?", {"Lorgar": 3}),
    ("¿Detestas la debilidad, incluso en ti mismo?", {"Mortarion": 3}),
    ("¿Valoras la independencia sobre la obediencia?", {"Khan": 3}),
    ("¿Te guías más por la emoción que por la razón?", {"Angron": 3, "Sanguinius": 2}),
    ("¿Te sientes atraído por los secretos y la intriga?", {"Alpharius Omegon": 3}),
    ("¿Prefieres la lealtad inquebrantable?", {"Rogal Dorn": 3, "Russ": 2}),
    ("¿Eres una persona disciplinada?", {"Dorn": 3, "Perturabo": 2}),
    ("¿Crees que el cambio es necesario?", {"Magnus the Red": 2, "Khan": 3}),
    ("¿Te consideras un perfeccionista?", {"Fulgrim": 3, "Perturabo": 2}),
    ("¿Te cuesta perdonar?", {"Mortarion": 3, "Curze": 2}),
    ("¿Te gusta enseñar a otros?", {"Guilliman": 2, "Lorgar": 2}),
    ("¿Eres rebelde contra la autoridad?", {"Khan": 3, "Corax": 2}),
    ("¿Disfrutas explorando lugares nuevos?", {"Jaghatai Khan": 3}),
    ("¿Respetas estrictamente las reglas?", {"Rogal Dorn": 3}),
    ("¿Te sientes más cómodo en el combate físico?", {"Angron": 3, "Russ": 3}),
    ("¿Sueles mantener la calma bajo presión?", {"Guilliman": 3, "Lion El'Jonson": 2}),
    # ... (añadir más preguntas hasta totalizar 150, manteniendo la estructura)
]

# Duplicamos las preguntas variando enfoques para llegar a 150
while len(preguntas) < 150:
    base = random.choice(preguntas)
    nueva = (base[0] + " (versión alternativa)", base[1])
    preguntas.append(nueva)

# ---------------------------
# Ejecución del test
# ---------------------------
def ejecutar_test():
    print("Bienvenido al Test de los Primarcas de Warhammer 40K\n")
    print("Responde las siguientes 20 preguntas con 'sí' o 'no'.\n")

    # Selecciona 20 preguntas únicas al azar
    seleccionadas = random.sample(preguntas, 20)

    for i, (pregunta, asociaciones) in enumerate(seleccionadas, 1):
        respuesta = input(f"{i}. {pregunta} (sí/no): ").strip().lower()
        if respuesta in ["sí", "si"]:
            for primarca, puntos in asociaciones.items():
                primarcas[primarca] += puntos

    resultado = max(primarcas, key=primarcas.get)
    print("\nEl Primarca con el que más te identificas es:\n")
    print(f"***{resultado}*** con {primarcas[resultado]} puntos.")

# Ejecutar
if __name__ == "__main__":
    ejecutar_test()
